{
    "manifest_version": 3,
    "name": "Syntax Sentry",
    "version": "1.0",
    "description": "AI-powered anti-cheating detection and analysis tool for LeetCode.",
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage",
      "clipboardRead",
      "clipboardWrite"
    ],
    "host_permissions": [
      "https://leetcode.com/problems/*",
      "http://localhost:3000/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://leetcode.com/problems/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icons/icon.svg"
      }
    },
    "icons": {
      "128": "icons/icon.svg"
    }
  }
  
